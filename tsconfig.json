{
  "compilerOptions": {
    "outDir": "./scripts",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "experimentalDecorators": false,
    "inlineSourceMap": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
