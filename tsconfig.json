{
  "compilerOptions": {
    "outDir": "./scripts",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"]
}
